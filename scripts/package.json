{
  "name": "typescript-boilerplate-2021",
  "version": "0.4.2",
  "description": "Boilerplate for TypeScript projects (Node.js and browser modules)",
  "author": "Chris Hager <chris@linuxuser.at>",
  "repository": "https://github.com/metachris/typescript-boilerplate",
  "license": "MIT",
  "keywords": [
    "typescript",
    "boilerplate",
    "esbuild"
  ],
  "main": "./dist/tsc/plan-round.js",
  "types": "./dist/tsc/plan-round.d.ts",
  "browser": "./dist/esbuild/browser.js",
  "bin": {
    "my-cli-tool": "./dist/esbuild/cli.js"
  },
  "scripts": {
    "cli": "ts-node src/cli.ts",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "test": "jest --verbose",
    "clean": "rm -rf dist build package",
    "ts-node": "ts-node",
    "docs": "typedoc --entryPoints src/main.ts",
    "build": "tsc -p tsconfig.json",
    "club-member-create":  "ts-node src/club-member-create.ts",
    "round-plan-0": "nodemon --watch '../src/**/*.ts' --exec 'ts-node' src/round-plan.ts data/raw/tournament.json data/updated/tournament.json",
    "round-plan-x": "nodemon --watch '../src/**/*.ts' --exec 'ts-node' src/round-plan.ts data/updated/tournament.json data/updated/tournament.json",
    "round-start": "nodemon --watch '../src/**/*.ts' --exec 'ts-node' src/round-start.ts data/updated/tournament.json data/updated/tournament.json",
    "start": "nodemon --watch '../src/**/*.ts' --exec 'ts-node' src/index.ts",
    "tournament-create":  "ts-node src/tournament-create.ts"
  },
  "dependencies": {
    "shortid": "^2.2.16",
    "ts-results": "^3.3.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "@types/node": "^15.0.1",
    "@types/shortid": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "esbuild": "^0.11.11",
    "eslint": "^7.22.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.18",
    "ts-jest": "^26.5.4",
    "tslib": "^2.4.0",
    "ts-node": "~10.8.1",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.3"
  }
}
